<?xml version='1.0' encoding='utf-8'?>
<class id="BLEpp::Characteristic" name="Characteristic" xmlns="http://jessevdk.github.com/cldoc/1.0">
  <brief>A characteristic for strings</brief>
  <base access="public">
    <type name="CharacteristicGeneric&lt;std::basic_string&lt;char&gt; &gt;" />
  </base>
  <method id="BLEpp::Characteristic::getValueLength" name="getValueLength" virtual="yes">
    <brief>Return the actual length of the value</brief>
    <doc>Return the length of the string
</doc>
    <return>
      <type name="uint16_t" />
    </return>
  </method>
  <method id="BLEpp::Characteristic::getValueMaxLength" name="getValueMaxLength" virtual="yes">
    <brief>Return the maximum length of the value</brief>
    <doc>The maximum length of a string is defined as
&amp;lt;MAX\_STRING\_LENGTH&amp;gt;
</doc>
    <return>
      <type name="uint16_t" />
    </return>
  </method>
  <method id="BLEpp::Characteristic::getValuePtr" name="getValuePtr" virtual="yes">
    <brief>Return the pointer to the memory where the value is stored</brief>
    <doc>For a string return pointer to null-terminated content of the
string
</doc>
    <return>
      <type name="uint8_t" qualifier="*" />
    </return>
  </method>
  <method id="BLEpp::Characteristic::operator=" name="operator=">
    <brief>@inherit</brief>
    <return>
      <type name="Characteristic&lt;std::string&gt;" qualifier=" &amp;" ref="BLEpp::Characteristic#BLEpp::Characteristic" />
    </return>
    <argument id="BLEpp::Characteristic::operator=::val" name="val">
      <type name="std::string" qualifier=" const &amp;" />
    </argument>
  </method>
</class>
